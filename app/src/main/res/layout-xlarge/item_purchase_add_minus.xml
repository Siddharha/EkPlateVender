<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#787878" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemPurchased"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:hint="ITEM PURCHASED"
                                android:padding="5dp"
                                android:imeOptions="actionNext"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.9"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemDays"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:hint="DAYS"
                                android:padding="5dp"
                                android:imeOptions="actionNext"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemQty"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:gravity="center"
                                android:hint="QTY"
                                android:padding="5dp"
                                android:imeOptions="actionNext"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemUnit"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:hint="UNIT"
                                android:gravity="center"
                                android:padding="5dp"
                                android:imeOptions="actionNext"
                                android:visibility="gone" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sqUntInfl"
                                android:background="@drawable/shape_panel"
                                android:spinnerMode="dropdown"
                                android:gravity="center"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp"
                            android:visibility="gone" >

                            <EditText
                                android:id="@+id/editText10"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:hint="COST IN RS"
                                android:padding="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemCost"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="10sp"
                                android:inputType="number"
                                android:gravity="center"
                                android:hint="TOTLA COST IN RS"
                                android:padding="5dp"
                                android:imeOptions="actionNext"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.9"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp"
                            android:visibility="gone" >

                            <EditText
                                android:id="@+id/editText12"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:hint="DAYS"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp"
                            android:visibility="gone" >

                            <EditText
                                android:id="@+id/editText13"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:gravity="center"
                                android:hint="QTY"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.9"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemCostPerUnit"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:hint="COST"
                                android:padding="5dp"
                                android:imeOptions="actionDone"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp" >

                            <EditText
                                android:id="@+id/etItemPerUnit"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_panel"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:hint="UNIT"
                                android:gravity="center"
                                android:padding="5dp"
                                android:imeOptions="actionDone"
                                android:visibility="gone" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sqUntInflPer"
                                android:background="@drawable/shape_panel"
                                android:spinnerMode="dropdown"
                                android:gravity="center"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_gravity="bottom"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/btnItemPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_shape_green"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="+"
                        android:layout_marginRight="5dp" />

                    <Button
                        android:id="@+id/btnItemMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_shape_gray"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>